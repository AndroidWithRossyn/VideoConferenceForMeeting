<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_sign_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/native_ads"
        android:layout_marginStart="@dimen/_40dp"
        android:layout_marginEnd="@dimen/_40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:text="@string/personal_info"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.MyApp.Headline5"
            android:textColor="@color/colorWhite" />

        <EditText
            android:id="@+id/mETFullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Enter Full Name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/_30dp"
            android:paddingEnd="@dimen/_10dp"
            android:textAppearance="@style/TextAppearance.MyApp.Caption"
            android:textColor="@color/colorWhite05"
            android:textColorHint="@color/colorWhite05"
            android:textCursorDrawable="@null">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/mETUserName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Set Username"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/_30dp"
            android:paddingEnd="@dimen/_10dp"
            android:textAppearance="@style/TextAppearance.MyApp.Caption"
            android:textColor="@color/colorWhite05"
            android:textColorHint="@color/colorWhite05"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/mETAge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Enter your age"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="@dimen/_30dp"
            android:paddingEnd="@dimen/_10dp"
            android:textAppearance="@style/TextAppearance.MyApp.Caption"
            android:textColor="@color/colorWhite05"
            android:textColorHint="@color/colorWhite05"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:id="@+id/mLLGenderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_4dp"
                android:text="@string/enter_gender"
                android:textAppearance="@style/TextAppearance.MyApp.Caption"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mRbtnMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:checked="true"
                        android:padding="4dp"
                        android:theme="@style/MyRadioButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_boy"
                        android:drawablePadding="@dimen/_4dp"
                        android:gravity="center"
                        android:text="@string/male"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption"
                        android:textColor="@color/colorOnPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mRbtnFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:checked="false"
                        android:padding="4dp"
                        android:theme="@style/MyRadioButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_girl"
                        android:drawablePadding="@dimen/_4dp"
                        android:gravity="center"
                        android:text="@string/female"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption"
                        android:textColor="@color/colorOnPrimary" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/mTxtNext"
            android:layout_width="240dp"
            android:layout_height="@dimen/_44dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@drawable/bg_gradiant_stroke"
            android:backgroundTint="@color/colorOnPrimary"
            android:gravity="center"
            android:text="@string/next"
            android:textAppearance="@style/TextAppearance.MyApp.Body1"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/native_ads"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="@dimen/_4dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />
</RelativeLayout>