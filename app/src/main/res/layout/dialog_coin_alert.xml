<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.meetsl.scardview.SCardView
        android:id="@+id/mScVBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_30dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_24dp"
        app:cardElevation="@dimen/_10dp"
        app:cardLightDirection="none"
        app:cardShadowEndColor="@color/colorshadow"
        app:cardShadowStartColor="@color/colorshadow2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTxtIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_30dp"
                android:text="@string/coin_txt"
                android:textAppearance="@style/TextAppearance.MyApp.Body1"
                android:textColor="@color/dialog_txt" />

            <TextView
                android:id="@+id/mTxtOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:background="@drawable/bg_gradiant"
                android:gravity="center"
                android:text="@string/ok"
                android:textAppearance="@style/TextAppearance.MyApp.Subtitle2"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </com.meetsl.scardview.SCardView>
</RelativeLayout>
